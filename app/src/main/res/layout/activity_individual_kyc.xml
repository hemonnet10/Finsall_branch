<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.IndividualKYCActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">
                <RelativeLayout
                    android:id="@+id/rlAadhaar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >


                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/form_margin"
                        android:text="Please enter 12 digit aadhaar card number" />

                    <EditText
                        android:id="@+id/etAdhaar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView4"
                        android:layout_margin="@dimen/form_margin"
                        android:ems="10"
                        android:hint=""
                        android:inputType="text" />

                    <Button
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etAdhaar"
                        android:layout_margin="@dimen/form_margin"
                        android:background="@android:color/holo_blue_bright"
                        android:onClick="sendOTP"
                        android:text="CLICK HERE TO VALIDATE" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlOTP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    >


                    <TextView
                        android:id="@+id/textView44"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/form_margin"
                        android:text="Please enter OTP number" />

                    <EditText
                        android:id="@+id/etOTP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView44"
                        android:layout_margin="@dimen/form_margin"
                        android:ems="10"
                        android:hint=""
                        android:inputType="text" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/etOTP"
                        android:layout_margin="@dimen/form_margin"
                        android:onClick="validateOTP"
                        android:background="@android:color/holo_blue_bright"
                        android:text="SUBMIT" />
                </RelativeLayout>

            </RelativeLayout>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CustomerDetailActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">


            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/form_margin"
                android:text="Name*" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:layout_margin="@dimen/form_margin"
                android:ems="10"
                android:hint=""
                android:inputType="text" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etName"
                android:layout_margin="@dimen/form_margin"
                android:text="Mobile Number*" />

            <EditText
                android:id="@+id/etMobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_margin="@dimen/form_margin"
                android:ems="10"
                android:hint=""
                android:inputType="number|phone" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etMobileNo"
                android:layout_margin="@dimen/form_margin"
                android:text="Email Id*" />

            <EditText
                android:id="@+id/etEmailId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_margin="@dimen/form_margin"
                android:ems="10"
                android:hint=""
                android:inputType="textEmailAddress" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_below="@+id/etEmailId"

                android:layout_height="wrap_content"
                android:layout_margin="@dimen/form_margin"
                android:text="PAN Card Number*" />

            <EditText
                android:id="@+id/etPan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_margin="@dimen/form_margin"
                android:ems="10"
                android:hint=""
                android:inputType="text" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etPan"
                android:layout_margin="@dimen/form_margin"
                android:text="AadhaarNumber /Virtual ID*" />

            <EditText
                android:id="@+id/etAdhaarOrVID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_margin="@dimen/form_margin"
                android:ems="10"
                android:hint=""
                android:inputType="number" />


            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etAdhaarOrVID"
                android:layout_margin="@dimen/form_margin"

                android:text="Father's Name" />

            <EditText
                android:id="@+id/etFatherName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_margin="@dimen/form_margin"
                android:ems="10"
                android:hint=""
                android:inputType="text" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etFatherName"
                android:layout_margin="@dimen/form_margin"
                android:text="Date of Birth" />

            <DatePicker
                android:id="@+id/datePickerDOB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_margin="@dimen/form_margin"
                />


            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/datePickerDOB"
                android:layout_margin="@dimen/form_margin"
                android:text="Address Line 1" />

            <EditText
                android:id="@+id/etAddressLine1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView8"
                android:layout_margin="@dimen/form_margin"
                android:ems="10"
                android:hint=""
                android:inputType="text" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etAddressLine1"
                android:layout_margin="@dimen/form_margin"
                android:text="Address Line 2" />

            <EditText
                android:id="@+id/etAddressLine2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView9"
                android:layout_margin="@dimen/form_margin"
                android:ems="10"
                android:hint=""
                android:inputType="text" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etAddressLine2"
                android:layout_margin="@dimen/form_margin"
                android:text="District" />

            <EditText
                android:id="@+id/etDistrict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView10"
                android:layout_margin="@dimen/form_margin"
                android:ems="10"
                android:hint=""
                android:inputType="text" />


            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etDistrict"
                android:layout_margin="@dimen/form_margin"

                android:text="State" />

            <Spinner
                android:id="@+id/spinnerState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView11"
                android:layout_margin="@dimen/form_margin"
                 />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinnerState"
                android:layout_margin="@dimen/form_margin"
                android:text="PIN Code" />

            <EditText
                android:id="@+id/etPinCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView12"
                android:layout_margin="@dimen/form_margin"
                android:ems="10"
                android:hint=""
                android:inputType="number" />




            <Button
                android:id="@+id/buttonSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etPinCode"
                android:layout_margin="@dimen/form_margin"
                android:background="@android:color/holo_blue_bright"
                android:onClick="updateCustomerDetailFromKYC"
                android:text="SUBMIT CUSTOMER INFORMATION" />

        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
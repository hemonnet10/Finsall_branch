<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FingerPrintScanningActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rlRejection"
                android:layout_margin="100dp"
                >

                <ImageView
                    android:id="@+id/imageViewRejection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/form_margin"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/add_fingerprint" />

                />

            </RelativeLayout>
            <TextView
                android:id="@+id/tvAddFingerPrint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/rlRejection"
                android:layout_margin="@dimen/form_margin"
                android:text="Add Finger Print" />

            <ImageView
                android:id="@+id/imageViewAddFingerPrint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/form_margin"
                android:layout_below="@+id/tvAddFingerPrint"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/add_fingerprint" />

            />
            <TextView
                android:id="@+id/tvLoanRejected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageViewAddFingerPrint"
                android:layout_margin="@dimen/form_margin"
                android:textStyle="bold"
                android:text="Put your finger on the sensor &amp; remove after you feel vibration " />

        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>